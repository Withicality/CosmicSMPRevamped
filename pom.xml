        </dependency>
        <dependency>
            <groupId>withicality</groupId>
            <artifactId>WithicalUtilities</artifactId>
            <version>1.3-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.comphenix.protocol</groupId>
            <artifactId>ProtocolLib</artifactId>
            <version>4.8.0</version>
